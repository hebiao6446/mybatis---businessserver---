<%@page language="java" import="java.util.*" pageEncoding="utf-8"%>
<%@ include file="/common/checklogin.jsp"%>
<!DOCTYPE html>
<html lang="en">
<head>
<title>下属人员管理</title>
<style type="text/css">
.white_content {
	display: none;
	position: fixed;
	top: 30%;
	left: 30%;
	width: 405px;
	height: 245px;
	border: 2px solid lightblue;
	background-color: #efefef;
	z-index: 1002;
	overflow: auto;
}

.menu {
	color: red;
	text-align: center;
	cursor: pointer;
}
</style>


</head>
<body>

	<jsp:include page="/common/head.jsp"></jsp:include>
	<jsp:include page="/common/leftmenue.jsp"></jsp:include>
	<div id="content">
		<div id="content-header">
			<div id="breadcrumb">

				<a href="#" class="current">下属人员管理</a>
			</div>
		</div>

		<div class="container-fluid">

			<div class="row-fluid">
				<div class="span12">
					<div class="widget-box">
						<div class="widget-title">
							<span class="icon"> <i class="icon-info-sign"></i> </span>
							<h5>下属人员列表</h5>
						</div>
						<table class="table table-bordered table-striped">
							<thead>
								<tr>
									<th width="5%"><input type="checkbox"
										id="title-table-checkbox" name="title-table-checkbox" /></th>
									<th width="10%" style="font-size: 12px;">姓名</th>
									<th width="10%" style="font-size: 12px;">帐号</th>
									<th width="10%" style="font-size: 12px;">手机</th>
									<th width="8%" style="font-size: 12px;">是否考勤</th>
									<th width="8%" style="font-size: 12px;">角色</th>
									<th width="8%" style="font-size: 12px;">状态</th>
									<th width="10%" style="font-size: 12px;">查看考勤</th>

								</tr>
							</thead>
							<tbody id="table_content">
 
							</tbody>
						</table>
						<div class="widget-title"
							style="border: 1px solid #ccc; padding: 20px 20px;">
							<c:if test="${(sessionScope.role.parentId==0)}">
								<a class="btn btn-warning" style="margin-left: 20px;"
									onclick="insertDialog();">新增</a>
							</c:if>
							<c:if test="${(sessionScope.role.parentId==0)}">
								<a class="btn btn-warning" style="margin-left: 20px;"
									onclick="deleteUserAllData();">关闭</a>
							</c:if>
							<c:if test="${(sessionScope.role.parentId==0)}">
								<a class="btn btn-warning" style="margin-left: 20px;"
									onclick="deleteUserQllData();">开启</a>
							</c:if>
						</div> 

					</div>
				</div>
			</div>
		</div>
	</div>



	<jsp:include page="/common/buttom.jsp"></jsp:include>

</body>
</html>
<script type="text/javascript">
	var rowData = [];
	$(function() {

		loadData(1);

	});
	function loadData(page, size) {
		if (size != undefined) {
			pageinfo["size"] = size;
			$('#pagesize').html(size);
		}
		if (page == -1)
			pageinfo["page"]--;
		else if (page == -2)
			pageinfo["page"]++;
		else {
			if (page >= pageinfo["tp"] && pageinfo["tp"] > 0)
				pageinfo["page"] = pageinfo["tp"];
			else
				pageinfo["page"] = page;
		}

		$
				.ajax({
					type : "post",
					url : '${ctx}/contacts!findMySubContactsList.action',
					dataType : 'json',
					data : pageinfo,
					success : function(msg, status) {
						var array = [];
						if (msg.status == 200) {
							rowData = msg.rows;
							for ( var i = 0; i < msg.rows.length; i++) {
								var data = msg.rows[i];
								array.push('<tr>');

								array
										.push('<td style="cursor:pointer;text-align:center;"><input type="checkbox" name="checkbox-tr" value="' + data["userId"]+ '"/></td>');
								array
										.push('<td style="cursor:pointer;text-align:center;">'
												+ data["name"] + '</td>');
								array
										.push('<td style="cursor:pointer;text-align:center;">'
												+ data["account"] + '</td>');
								array
										.push('<td style="cursor:pointer;text-align:center;">'
												+ data["phone"] + '</td>');
								if (data["attendance"] == 'T') {
									array.push('<td>是</td>');
								}
								if (data["attendance"] == 'F') {
									array.push('<td>否</td>');
								}

								array
										.push('<td style="cursor:pointer;text-align:center;">'
												+ data["rolename"] + '</td>');

								if (data["status"] == '1') {
									array.push('<td>开启</td>');
								}
								if (data["status"] == '2') {
									array.push('<td>关闭</td>');
								}

								array
										.push('<td style="cursor:pointer;text-align:center;">'
												+ '<a href="javascript:void(0)" style="color:red;" onclick="queryattendance('
												+ data["userId"]
												+ ')">查看</a></td>');

								array.push('</tr>');
							}
							$('#table_content').html(array.join(''));
							initpageInfo(msg.total);
						} else {
							alert(msg.msg);

						}
					}
				});
	}

	function deleteData() {
		var ids = [];
		$('input[name="checkbox-tr"]:checked').each(function(index, data) {
			ids.push($(this).val());
		});
		if (ids.length == 0) {
			alert('请选择数据!');
			return;
		} else {
			if (window.confirm('确定删除吗？')) {
				$.ajax({
					type : "post",
					url : '${ctx}/user!deleteAllData.action',
					dataType : 'json',
					data : {
						table : "group",
						fields : ids.join(',')
					},
					success : function(msg, status) {
						if (msg.status == 200) {
							alert('删除成功!');
							loadData(1);
						} else {
							alert(msg.msg);

						}
					}
				});
			}
		}

	}


	function deleteUserAllData() {
		var ids = [];
		$('input[name="checkbox-tr"]:checked').each(function(index, data) {
			ids.push($(this).val());
		});
		if (ids.length == 0) {
			alert('请选择数据!');
			return;
		} else {
			if (window.confirm('确定更改吗？')) {
				$.ajax({
					type : "post",
					url : '${ctx}/user!deleteUserAllData.action',
					dataType : 'json',
					data : {
						table : "user",
						fields : ids.join(',')
					},
					success : function(msg, status) {
						if (msg.status == 200) {
							alert('更改成功!');
							loadData();
						} else {
							alert(msg.msg);
						}
					}
				});
			}
		}
	}

	function deleteUserQllData() {
		var ids = [];
		$('input[name="checkbox-tr"]:checked').each(function(index, data) {
			ids.push($(this).val());
		});
		if (ids.length == 0) {
			alert('请选择数据!');
			return;
		} else {
			if (window.confirm('确定更改吗？')) {
				$.ajax({
					type : "post",
					url : '${ctx}/user!deleteUserQllData.action',
					dataType : 'json',
					data : {
						table : "user",
						fields : ids.join(',')
					},
					success : function(msg, status) {
						if (msg.status == 200) {
							alert('更改成功!');
							loadData();
						} else {
							alert(msg.msg);
						}
					}
				});
			}
		}
	}
	
	
	function query(userId) {

		window.location.href = "${ctx}/pages/contactsManagerList.jsp?userId="
				+ userId;
	}

	function queryattendance(userId) {

		window.location.href = "${ctx}/pages/attendanceManagerList.jsp?userId="
				+ userId;
	}
</script>
</body>
</html>

