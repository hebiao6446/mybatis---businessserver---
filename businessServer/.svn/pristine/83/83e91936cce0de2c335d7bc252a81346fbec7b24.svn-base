<%@page language="java" import="java.util.*" pageEncoding="utf-8"%>
<%@ include file="/common/checklogin.jsp"%>
<!DOCTYPE html>
<html lang="en">
<head>
<title>考勤管理</title>
<style type="text/css">
.white_content {
	display: none;
	position: fixed;
	top: 30%;
	left: 30%;
	width: 405px;
	height: 245px;
	border: 2px solid lightblue;
	background-color: #efefef;
	z-index: 1002;
	overflow: auto;
}

.menu {
	color: red;
	text-align: center;
	cursor: pointer;
}
</style>


</head>
<body>



	<jsp:include page="/common/head.jsp"></jsp:include>
	<jsp:include page="/common/leftmenue.jsp"></jsp:include>
	<div id="content">
		<div id="content-header">
			<div id="breadcrumb">

				<a href="#" class="current">考勤管理</a>
			</div>
		</div>

		<div class="container-fluid">
			<div class="row-fluid">

				<div class="span12">
					开始时间<input id="startTime" class="Wdate"
						onfocus="WdatePicker({maxDate:'#F{$dp.$D(\'endTime\');}',dateFmt:'yyyy-MM-dd'})" />
					结束时间<input id="endTime" class="Wdate"
						onfocus="WdatePicker({minDate:'#F{$dp.$D(\'startTime\');}',dateFmt:'yyyy-MM-dd'})" />
					<button class="btn btn-warning" type="button"
						class="btn btn-success" onclick="loadData(1)">查&nbsp;&nbsp;&nbsp;&nbsp;询</button>
					<div class="widget-box"></div>
				</div>


				<div class="widget-box">
					<div class="widget-title">
						<span class="icon"> <i class="icon-info-sign"></i> </span>
						<h5>考勤列表</h5>
					</div>


					<table class="table table-bordered table-striped">
						<thead>
							<tr>
								<th width="5%"><input type="checkbox"
									id="title-table-checkbox" name="title-table-checkbox" /></th>
								<th width="8%" style="font-size: 12px;">签到日期</th>
								<th width="9%" style="font-size: 12px;">签到姓名</th>
								<th width="10%" style="font-size: 12px;">签到时间</th>
								<th width="10%" style="font-size: 12px;">签到方式</th>
								<th width="10%" style="font-size: 12px;">签到地址</th>
								<th width="10%" style="font-size: 12px;">签退时间</th>
								<th width="10%" style="font-size: 12px;">签退方式</th>
								<th width="10%" style="font-size: 12px;">签退地址</th>
								<th width="8%" style="font-size: 12px;">考勤状态</th>
								<th width="15%" style="font-size: 12px;">考勤说明</th>
							</tr>
						</thead>
						<tbody id="table_content">

						</tbody>
					</table>
					<div class="widget-title"
						style="height: 40px; border: 1px solid #ccc; padding-bottom: 4px; padding-left: 20px;">


						<div class="pagination alternate"
							style="margin-left: 0px; margin-top: 8px; float: left;">

							<button class="btn btn-warning" onclick="">签&nbsp;&nbsp;&nbsp;&nbsp;到</button>
							&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
							<button class="btn btn-warning" onclick="">签&nbsp;&nbsp;&nbsp;&nbsp;退</button>
							&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
							<button class="btn btn-warning" onclick="loadData(-1)">上&nbsp;&nbsp;&nbsp;&nbsp;页</button>
							&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
							<button class="btn btn-warning" onclick="loadData(-2)">下&nbsp;&nbsp;&nbsp;&nbsp;页</button>
							&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;





						</div>
					</div>

				</div>
			</div>
		</div>
	</div>


	<jsp:include page="/common/buttom.jsp"></jsp:include>
	<script src="${ctx}/js/jquery.flot.min.js"></script>
	<script src="${ctx}/js/jquery.flot.pie.min.js"></script>
	<script src="${ctx}/js/jquery.flot.resize.min.js"></script>
	<script src="${ctx}/js/jquery.peity.min.js"></script>
	<script type="text/javascript"
		src="${ctx}/js/My97DatePicker/WdatePicker.js"></script>
</body>
</html>
<script type="text/javascript">
	var rowData = [];

	$(function() {

		loadData(1);
		var param = {};
		param["startTime"] = $('#startTime').val();
		param["endTime"] = $('#endTime').val();
	});
	function loadData(page, size) {
		if (size != undefined) {
			pageinfo["size"] = size;
			$('#pagesize').html(size);
		}
		if (page == -1) {
			if (pageinfo["page"] == 1)
				return;
			pageinfo["page"]--;
		}

		else if (page == -2)
			pageinfo["page"]++;
		else {
			if (page >= pageinfo["tp"] && pageinfo["tp"] > 0)
				pageinfo["page"] = pageinfo["tp"];
			else
				pageinfo["page"] = page;
		}

		pageinfo["userId"] = '${param.userId}';
		pageinfo["fontTime"] = $('#startTime').val();
		pageinfo["backTime"] = $('#endTime').val();

		$
				.ajax({
					type : "post",
					url : '${ctx}/attendance!findAttendanceList.action',
					dataType : 'json',
					data : pageinfo,
					success : function(msg, status) {
						var array = [];
						if (msg.status == 200) {
							rowData = msg.rows;
							for ( var i = 0; i < msg.rows.length; i++) {
								var data = msg.rows[i];
								array.push('<tr>');

								array
										.push('<td style="cursor:pointer;text-align:center;"><input type="checkbox" name="checkbox-tr" value="' + data["attendanceId"]+ '"/></td>');
								array
										.push('<td style="cursor:pointer;text-align:center;">'
												+ data["myTime"] + '</td>');
								array
										.push('<td style="cursor:pointer;text-align:center;">'
												+ data["name"] + '</td>');
								if (data["attendanceId"] == 0
										|| data["attendanceId"] == 0) {
									array.push('<td colspan="8">未考勤</td>');
								} else {
									array
											.push('<td style="text-align:center;">'
													+ data["inTime"] + '</td>');

									if (data["inSignType"] == 1) {
										array.push('<td>手机</td>');
									}
									else if (data["inSignType"] == 2) {
										array.push('<td>后台</td>');
									}
									else 	if (data["inSignType"] == 3) {
										array.push('<td>其他</td>');
									}
									
									array
											.push('<td style="text-align:center;">'
													+ data["inAddress"]
													+ '</td>');
									array
											.push('<td style="text-align:center;">'
													+ data["outTime"] + '</td>');

								 if (data["outSignType"] == 1) {
										array.push('<td>手机</td>');
									}
									else if (data["outSignType"] == 2) {
										array.push('<td>后台</td>');
									}
									else if (data["outSignType"] == 3) {
										array.push('<td>其他</td>');
									}
									array
											.push('<td style="text-align:center;">'
													+ data["outAddress"]
													+ '</td>');

									if (data["status"] == 1) {
										array.push('<td>迟到</td>');
									}
									else if (data["status"] == 2) {
										array.push('<td>早退</td>');
									}
									else  if (data["status"] == 3) {
										array.push('<td>迟到早退</td>');
									}
									
									array
											.push('<td><a href="javascript:void(0)" onclick="query('
													+ data["userId"]
													+ ')" class="menu">查看说明</a></td>');
								}
								array.push('</tr>');
							}
							$('#table_content').html(array.join(''));
							array = null;
							initpageInfo(msg.total);

						} else {
							alert(msg.msg);

						}
					}
				});
	}

	function deleteData() {
		var ids = [];
		$('input[name="checkbox-tr"]:checked').each(function(index, data) {
			ids.push($(this).val());
		});
		if (ids.length == 0) {
			alert('请选择数据!');
			return;
		} else {
			if (window.confirm('确定删除吗？')) {
				$.ajax({
					type : "post",
					url : '${ctx}/user!deleteAllData.action',
					dataType : 'json',
					data : {
						table : "attendance",
						fields : ids.join(',')
					},
					success : function(msg, status) {
						if (msg.status == 200) {
							alert('删除成功!');
							loadData(1);
						} else {
							alert(msg.msg);

						}
					}
				});
			}
		}

	}

	function query(userId) {

		window.location.href = "${ctx}/pages/attendacedescriptManagerList.jsp?userId="
				+ userId;
	}
</script>

</body>
</html>

